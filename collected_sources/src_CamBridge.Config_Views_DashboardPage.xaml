<!-- src/CamBridge.Config/Views/DashboardPage.xaml -->
<Page x:Class="CamBridge.Config.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.modernwpf.com/2019">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Connection Status -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Dashboard" FontSize="32" FontWeight="SemiBold" Margin="0,0,0,20"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Ellipse Width="12" Height="12" Margin="0,0,8,0">
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Setter Property="Fill" Value="Gray"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                    <Setter Property="Fill" Value="LimeGreen"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>
                <TextBlock Text="{Binding ConnectionStatus}" FontSize="14" Opacity="0.7"/>
                <TextBlock Text=" • " Margin="8,0" Opacity="0.5"/>
                <TextBlock Text="{Binding LastUpdate, StringFormat='Updated: {0:HH:mm:ss}'}" 
                          FontSize="14" Opacity="0.7"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Loading Overlay -->
            <ui:ProgressRing Grid.RowSpan="3" IsActive="{Binding IsLoading}" 
                           Width="60" Height="60" HorizontalAlignment="Center" 
                           VerticalAlignment="Center" Panel.ZIndex="10"/>

            <!-- Status Cards -->
            <UniformGrid Rows="1" Columns="4" Grid.Row="0">
                <!-- Service Status Card -->
                <Border Margin="0,0,12,0" CornerRadius="8" 
                        Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1">
                    <StackPanel Margin="20">
                        <TextBlock Text="Service Status" FontSize="14" Opacity="0.6"/>
                        <TextBlock Text="{Binding ServiceStatus}" FontSize="28" FontWeight="SemiBold" 
                                   Margin="0,8,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="Gray"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ServiceStatus}" Value="Running">
                                            <Setter Property="Foreground" Value="Green"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ServiceStatus}" Value="Offline">
                                            <Setter Property="Foreground" Value="Red"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="{Binding Uptime, StringFormat='Uptime: {0:d\\.hh\\:mm\\:ss}'}" 
                                  FontSize="12" Opacity="0.5" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Queue Length Card -->
                <Border Margin="0,0,12,0" CornerRadius="8"
                        Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1">
                    <StackPanel Margin="20">
                        <TextBlock Text="Queue Length" FontSize="14" Opacity="0.6"/>
                        <TextBlock Text="{Binding QueueLength}" FontSize="28" FontWeight="SemiBold"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="{Binding ActiveProcessing, StringFormat='{}{0} active'}" 
                                  FontSize="12" Opacity="0.5" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Success Count Card -->
                <Border Margin="0,0,12,0" CornerRadius="8"
                        Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1">
                    <StackPanel Margin="20">
                        <TextBlock Text="Successful" FontSize="14" Opacity="0.6"/>
                        <TextBlock Text="{Binding SuccessCount}" FontSize="28" FontWeight="SemiBold" 
                                   Foreground="Green" Margin="0,8,0,0"/>
                        <TextBlock Text="{Binding SuccessRate, StringFormat='{}{0:F1}% success rate'}" 
                                  FontSize="12" Opacity="0.5" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Error Count Card -->
                <Border CornerRadius="8"
                        Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1">
                    <StackPanel Margin="20">
                        <TextBlock Text="Errors" FontSize="14" Opacity="0.6"/>
                        <TextBlock Text="{Binding ErrorCount}" FontSize="28" FontWeight="SemiBold" 
                                   Margin="0,8,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="Gray"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=ErrorCount, 
                                                    Converter={StaticResource GreaterThanZeroConverter}}" 
                                                    Value="True">
                                            <Setter Property="Foreground" Value="Red"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Active Processing -->
            <Border Grid.Row="1" Margin="0,24,0,12" CornerRadius="8"
                    Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="1" Padding="20">
                <StackPanel>
                    <TextBlock Text="Active Processing" FontSize="20" FontWeight="SemiBold" 
                               Margin="0,0,0,16"/>
                    <ItemsControl ItemsSource="{Binding ActiveItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,8" Padding="12,8" CornerRadius="4"
                                       Background="{DynamicResource SystemControlBackgroundBaseLowBrush}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding FileName}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Duration}" 
                                                  Margin="16,0" Opacity="0.7" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" 
                                                  Text="{Binding AttemptCount, StringFormat='Attempt {0}'}" 
                                                  Opacity="0.7" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock Text="No files being processed" Opacity="0.5" 
                              Visibility="{Binding ActiveItems.Count, 
                                         Converter={StaticResource ZeroToVisibilityConverter}}"/>
                </StackPanel>
            </Border>

            <!-- Recent Activity -->
            <Border Grid.Row="2" CornerRadius="8"
                    Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="1" Padding="20">
                <StackPanel>
                    <TextBlock Text="Recent Activity" FontSize="20" FontWeight="SemiBold" 
                               Margin="0,0,0,16"/>
                    <ItemsControl ItemsSource="{Binding RecentActivities}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Margin="0,4">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSuccess}" Value="True">
                                                    <Setter Property="Text">
                                                        <Setter.Value>
                                                            <MultiBinding StringFormat="✓ {0}">
                                                                <Binding Path="Message"/>
                                                            </MultiBinding>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="Foreground" Value="Green"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsSuccess}" Value="False">
                                                    <Setter Property="Text">
                                                        <Setter.Value>
                                                            <MultiBinding StringFormat="✗ {0}">
                                                                <Binding Path="Message"/>
                                                            </MultiBinding>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
