<Page x:Class="CamBridge.Config.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.modernwpf.com/2019">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Dashboard" FontSize="32" FontWeight="SemiBold" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Status Cards -->
            <UniformGrid Rows="1" Columns="4" Grid.Row="0">
                <!-- Service Status Card -->
                <Border Margin="0,0,12,0" CornerRadius="8" 
                        Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1">
                    <StackPanel Margin="20">
                        <TextBlock Text="Service Status" FontSize="14" Opacity="0.6"/>
                        <TextBlock Text="Running" FontSize="28" FontWeight="SemiBold" 
                                   Foreground="Green" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Queue Length Card -->
                <Border Margin="0,0,12,0" CornerRadius="8"
                        Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1">
                    <StackPanel Margin="20">
                        <TextBlock Text="Queue Length" FontSize="14" Opacity="0.6"/>
                        <TextBlock Text="5" FontSize="28" FontWeight="SemiBold"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Success Count Card -->
                <Border Margin="0,0,12,0" CornerRadius="8"
                        Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1">
                    <StackPanel Margin="20">
                        <TextBlock Text="Successful" FontSize="14" Opacity="0.6"/>
                        <TextBlock Text="123" FontSize="28" FontWeight="SemiBold" 
                                   Foreground="Green" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Error Count Card -->
                <Border CornerRadius="8"
                        Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1">
                    <StackPanel Margin="20">
                        <TextBlock Text="Errors" FontSize="14" Opacity="0.6"/>
                        <TextBlock Text="2" FontSize="28" FontWeight="SemiBold" 
                                   Foreground="Red" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Recent Activity -->
            <Border Grid.Row="1" Margin="0,24,0,0" CornerRadius="8"
                    Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="1" Padding="20">
                <StackPanel>
                    <TextBlock Text="Recent Activity" FontSize="20" FontWeight="SemiBold" 
                               Margin="0,0,0,16"/>
                    <ListBox BorderThickness="0" Background="Transparent">
                        <ListBoxItem>
                            <TextBlock>
                                <Run Text="✓" Foreground="Green" FontWeight="Bold"/>
                                <Run Text=" IMG_001.jpg → PAT123_20250601_0001.dcm"/>
                            </TextBlock>
                        </ListBoxItem>
                        <ListBoxItem>
                            <TextBlock>
                                <Run Text="✓" Foreground="Green" FontWeight="Bold"/>
                                <Run Text=" IMG_002.jpg → PAT124_20250601_0001.dcm"/>
                            </TextBlock>
                        </ListBoxItem>
                        <ListBoxItem>
                            <TextBlock>
                                <Run Text="✗" Foreground="Red" FontWeight="Bold"/>
                                <Run Text=" IMG_003.jpg - Missing patient data"/>
                            </TextBlock>
                        </ListBoxItem>
                    </ListBox>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
