<!-- Version.props - Global version configuration -->
<!-- Version: 0.7.26 -->
<!-- Modified: 2025-06-18 -->
<Project>
	<PropertyGroup>
		<!-- SINGLE SOURCE OF TRUTH for version -->
		<VersionPrefix>0.7.26</VersionPrefix>
		<VersionSuffix></VersionSuffix>

		<!-- Assembly version (major.minor.0.0) for binary compatibility -->
		<AssemblyVersion>0.7.0.0</AssemblyVersion>

		<!-- File version (major.minor.patch.0) for file properties -->
		<FileVersion>0.7.26.0</FileVersion>

		<!-- Informational version shown in logs and UI -->
		<InformationalVersion>0.7.26 - Session 74 Transform Editor Enhanced</InformationalVersion>

		<!-- Package version for NuGet (if needed) -->
		<PackageVersion>0.7.26</PackageVersion>

		<!-- Product information -->
		<Product>CamBridge</Product>
		<Company>Claude's Improbably Reliable Software Solutions</Company>
		<Copyright>Copyright Â© 2025 Claude's Improbably Reliable Software Solutions</Copyright>

		<!-- Build metadata -->
		<RepositoryUrl>https://github.com/yourusername/CamBridge</RepositoryUrl>
		<RepositoryType>git</RepositoryType>

		<!-- Generate assembly info from these properties -->
		<GenerateAssemblyInfo>true</GenerateAssemblyInfo>
		<GenerateAssemblyFileVersionAttribute>true</GenerateAssemblyFileVersionAttribute>
		<GenerateAssemblyInformationalVersionAttribute>true</GenerateAssemblyInformationalVersionAttribute>
		<GenerateAssemblyConfigurationAttribute>true</GenerateAssemblyConfigurationAttribute>
	</PropertyGroup>
</Project>
