<Page x:Class="CamBridge.Config.Views.ServiceControlPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.modernwpf.com/2019">

    <Grid Margin="24">
        <StackPanel>
            <TextBlock Text="Service Control" FontSize="32" FontWeight="SemiBold" Margin="0,0,0,20"/>

            <TextBlock Text="CamBridge Service Status" FontSize="18" Margin="0,0,0,12"/>

            <Border CornerRadius="8" Padding="20"
                    Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Status: Running" FontSize="16" Margin="0,0,0,16"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Start Service" IsEnabled="False" Margin="0,0,8,0"/>
                        <Button Content="Stop Service" IsEnabled="True" Margin="0,0,8,0"/>
                        <Button Content="Restart Service"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
