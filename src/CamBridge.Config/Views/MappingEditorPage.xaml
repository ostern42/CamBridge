<Page x:Class="CamBridge.Config.Views.MappingEditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:conv="clr-namespace:CamBridge.Config.Converters"
      Title="Mapping Editor">

    <Page.Resources>
        <!-- Drag & Drop Styles -->
        <Style x:Key="DraggableItemStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundListLowBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource SystemControlHighlightBaseMediumBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DropTargetStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="MinHeight" Value="60"/>
            <Setter Property="Opacity" Value="0.8"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="24,24,24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Mapping Editor" 
                               FontSize="32" 
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Configure EXIF to DICOM tag mappings with drag and drop" 
                               FontSize="14" 
                               Opacity="0.7"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Button Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Download" Margin="0,0,4,0"/>
                            <TextBlock Text="Import"/>
                        </StackPanel>
                    </Button>
                    <Button Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Upload" Margin="0,0,4,0"/>
                            <TextBlock Text="Export"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Save" Margin="0,0,4,0"/>
                            <TextBlock Text="Save"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="24,0,24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="250"/>
                <ColumnDefinition Width="2*" MinWidth="400"/>
                <ColumnDefinition Width="400" MinWidth="350"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Available Fields -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Available Fields" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,12"/>

                    <!-- Source Type Selector -->
                    <ComboBox Grid.Row="1"
                              SelectedIndex="0"
                              Margin="0,0,0,12">
                        <ComboBoxItem>QRBridge Fields</ComboBoxItem>
                        <ComboBoxItem>EXIF Fields</ComboBoxItem>
                        <ComboBoxItem>Static Values</ComboBoxItem>
                    </ComboBox>

                    <!-- Draggable Items -->
                    <ScrollViewer Grid.Row="2" 
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- QRBridge Fields -->
                            <Border Style="{StaticResource DraggableItemStyle}"
                                    MouseLeftButtonDown="DraggableItem_MouseLeftButtonDown"
                                    Tag="QRBridge|examid">
                                <StackPanel>
                                    <TextBlock Text="Exam ID" FontWeight="SemiBold"/>
                                    <TextBlock Text="QRBridge.examid" FontSize="12" Opacity="0.7"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource DraggableItemStyle}"
                                    MouseLeftButtonDown="DraggableItem_MouseLeftButtonDown"
                                    Tag="QRBridge|name">
                                <StackPanel>
                                    <TextBlock Text="Patient Name" FontWeight="SemiBold"/>
                                    <TextBlock Text="QRBridge.name" FontSize="12" Opacity="0.7"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource DraggableItemStyle}"
                                    MouseLeftButtonDown="DraggableItem_MouseLeftButtonDown"
                                    Tag="QRBridge|birthdate">
                                <StackPanel>
                                    <TextBlock Text="Birth Date" FontWeight="SemiBold"/>
                                    <TextBlock Text="QRBridge.birthdate" FontSize="12" Opacity="0.7"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource DraggableItemStyle}"
                                    MouseLeftButtonDown="DraggableItem_MouseLeftButtonDown"
                                    Tag="QRBridge|gender">
                                <StackPanel>
                                    <TextBlock Text="Gender" FontWeight="SemiBold"/>
                                    <TextBlock Text="QRBridge.gender" FontSize="12" Opacity="0.7"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource DraggableItemStyle}"
                                    MouseLeftButtonDown="DraggableItem_MouseLeftButtonDown"
                                    Tag="QRBridge|comment">
                                <StackPanel>
                                    <TextBlock Text="Comment" FontWeight="SemiBold"/>
                                    <TextBlock Text="QRBridge.comment" FontSize="12" Opacity="0.7"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Middle Panel: Active Mappings -->
            <Border Grid.Column="1" 
                    Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Active Mappings" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,12"/>

                    <!-- Mappings List -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="MappingsList">
                            <!-- Sample Mapping -->
                            <Border Margin="0,0,0,8"
                                    Padding="12"
                                    Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                                    CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock FontWeight="SemiBold">
                                            <Run Text="Patient Name"/>
                                            <Run Text="→" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                            <Run Text="(0010,0010)"/>
                                        </TextBlock>
                                        <TextBlock Text="QRBridge.name → PatientName" 
                                                   FontSize="12" 
                                                   Opacity="0.7"/>
                                    </StackPanel>

                                    <Button Grid.Column="1"
                                            Width="32"
                                            Height="32"
                                            Style="{StaticResource DefaultButtonStyle}">
                                        <ui:SymbolIcon Symbol="Delete" Width="16" Height="16"/>
                                    </Button>
                                </Grid>
                            </Border>

                            <!-- Drop Zone -->
                            <Border x:Name="DropZone"
                                    Style="{StaticResource DropTargetStyle}"
                                    AllowDrop="True"
                                    Drop="DropZone_Drop"
                                    DragOver="DropZone_DragOver"
                                    DragLeave="DropZone_DragLeave"
                                    Margin="0,8,0,0">
                                <TextBlock Text="Drop fields here to create mapping"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Opacity="0.5"/>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Templates -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal"
                                Margin="0,12,0,0">
                        <TextBlock Text="Templates:" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <Button Content="Basic Patient"
                                ToolTip="Add basic patient mappings"
                                Margin="0,0,4,0"/>
                        <Button Content="Study Info"
                                ToolTip="Add study information mappings"
                                Margin="0,0,4,0"/>
                        <Button Content="Equipment"
                                ToolTip="Add equipment mappings"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Panel: Properties & Preview -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Properties -->
                <Border Grid.Row="0"
                        Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Mapping Properties" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,12"/>

                        <TextBlock Text="No mapping selected"
                                   Opacity="0.5"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,24"/>
                    </StackPanel>
                </Border>

                <!-- Splitter -->
                <GridSplitter Grid.Row="1"
                              Height="8"
                              HorizontalAlignment="Stretch"
                              Background="Transparent"/>

                <!-- Live Preview -->
                <Border Grid.Row="2"
                        Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,8,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="Live Preview" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,12"/>

                        <Border Grid.Row="1"
                                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                                CornerRadius="4"
                                Padding="12">
                            <TextBlock FontFamily="Consolas"
                                       FontSize="12">
                                <Run Text="Source: " FontWeight="SemiBold"/>
                                <Run Text="Schmidt, Maria"/>
                                <LineBreak/>
                                <Run Text="Result: " FontWeight="SemiBold"/>
                                <Run Text="Schmidt^Maria"/>
                                <LineBreak/>
                                <LineBreak/>
                                <Run Text="DICOM Tag: " FontWeight="SemiBold"/>
                                <Run Text="(0010,0010) PatientName"/>
                            </TextBlock>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                Padding="24,8">
            <Grid>
                <TextBlock Text="12 active mappings"
                           VerticalAlignment="Center"/>
                <TextBlock Text="Validation: All required fields mapped"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource SystemControlForegroundAccentBrush}"/>
            </Grid>
        </Border>
    </Grid>
</Page>
