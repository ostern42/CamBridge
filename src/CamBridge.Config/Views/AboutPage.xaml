<Page x:Class="CamBridge.Config.Views.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      Title="About CamBridge"
      Focusable="True">

    <Grid>
        <!-- Normal About Content -->
        <Grid x:Name="NormalContent">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF1E1E1E" Offset="0"/>
                    <GradientStop Color="#FF2D2D30" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        MaxWidth="600">

                <!-- Logo/Icon Area -->
                <Border Width="128" 
                        Height="128" 
                        CornerRadius="64"
                        Background="{DynamicResource SystemControlHighlightAccentBrush}"
                        Margin="0,0,0,24">
                    <TextBlock Text="CB" 
                               FontSize="48" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"/>
                </Border>

                <!-- Title -->
                <TextBlock Text="CamBridge" 
                           FontSize="48" 
                           FontWeight="Light"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                <!-- Version -->
                <TextBlock x:Name="VersionText"
                           Text="Version 0.5.0" 
                           FontSize="20" 
                           Opacity="0.8"
                           HorizontalAlignment="Center"
                           Foreground="White"
                           Margin="0,0,0,4"/>

                <!-- Subtitle -->
                <TextBlock x:Name="SubtitleText"
                           Text="JPEG to DICOM Converter for Ricoh Cameras" 
                           FontSize="16" 
                           Opacity="0.7"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,32"/>

                <!-- Info -->
                <TextBlock TextWrapping="Wrap" 
                           TextAlignment="Center"
                           Opacity="0.8"
                           LineHeight="24">
                    <Run Text="CamBridge seamlessly converts JPEG images from Ricoh G900 II cameras"/>
                    <LineBreak/>
                    <Run Text="to DICOM format, preserving patient data from QRBridge QR codes."/>
                    <LineBreak/>
                    <LineBreak/>
                    <Run Text="Designed for medical imaging workflows where reliability matters."/>
                </TextBlock>

                <!-- Copyright -->
                <TextBlock Text="© 2025 Claude's Improbably Reliable Software Solutions" 
                           FontSize="12" 
                           Opacity="0.6"
                           HorizontalAlignment="Center"
                           Margin="0,32,0,0"/>

                <!-- Links -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,16,0,0">
                    <Button Content="Documentation" 
                            Margin="0,0,8,0"
                            Style="{StaticResource DefaultButtonStyle}"/>
                    <Button Content="License" 
                            Margin="0,0,8,0"
                            Style="{StaticResource DefaultButtonStyle}"/>
                    <Button Content="GitHub" 
                            Style="{StaticResource DefaultButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Vogon Poetry Mode (Hidden Easter Egg) -->
        <Grid x:Name="VogonContent" 
              Visibility="Collapsed"
              Background="Black">

            <!-- Amiga Ball Canvas -->
            <Canvas x:Name="SpriteCanvas" 
                    ClipToBounds="True">
                <Image x:Name="SpriteImage" 
                       Width="50" 
                       Height="50"/>
            </Canvas>

            <!-- Scrolling Rainbow Text -->
            <Canvas Height="100" 
                    VerticalAlignment="Top"
                    Margin="0,50,0,0"
                    ClipToBounds="True">
                <TextBlock x:Name="ScrollingText"
                           Canvas.Top="20"
                           FontSize="48"
                           FontFamily="Consolas"
                           FontWeight="Bold">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="Red" Offset="0.0"/>
                            <GradientStop Color="Orange" Offset="0.17"/>
                            <GradientStop Color="Yellow" Offset="0.33"/>
                            <GradientStop Color="Green" Offset="0.5"/>
                            <GradientStop Color="Blue" Offset="0.67"/>
                            <GradientStop Color="Indigo" Offset="0.84"/>
                            <GradientStop Color="Violet" Offset="1.0"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                    <Run Text="✨ VOGON POETRY MODE ACTIVATED ✨ DICOM IS THE ANSWER ✨ 42 42 42 ✨ RESISTANCE IS FUTILE ✨"/>
                </TextBlock>
            </Canvas>

            <!-- Main Poetry Display -->
            <Border Background="#AA000000"
                    CornerRadius="20"
                    Padding="40"
                    MaxWidth="800"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="VOGONISCHE POESIE ÜBER DICOM"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#FF00FF00"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Lime" BlurRadius="20" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock FontSize="18"
                               FontFamily="Consolas"
                               Foreground="#FF00FF00"
                               TextAlignment="Center"
                               LineHeight="28">
                        <Run Text="Oh frettled gruntbuggly,"/>
                        <LineBreak/>
                        <Run Text="Thy DICOM tags do gurdlе and gyre,"/>
                        <LineBreak/>
                        <Run Text="All mimsy were the pixel bytes,"/>
                        <LineBreak/>
                        <Run Text="And the JPEG headers outgrabe."/>
                        <LineBreak/>
                        <LineBreak/>
                        <Run Text="See how the (0010,0010) PatientName doth slumber"/>
                        <LineBreak/>
                        <Run Text="In fields of binary wonder!"/>
                        <LineBreak/>
                        <Run Text="While (0008,0060) Modality screams"/>
                        <LineBreak/>
                        <Run Text="Through compressed photometric dreams!"/>
                    </TextBlock>

                    <!-- Error Haiku -->
                    <Border Background="#FFFF0000"
                            CornerRadius="10"
                            Padding="20"
                            Margin="0,30,0,0">
                        <TextBlock Text="ERROR HAIKU:&#x0a;DICOM Tag not found&#x0a;Patient data lost in void&#x0a;Segmentation fault"
                                   FontFamily="Consolas"
                                   FontSize="16"
                                   Foreground="White"
                                   TextAlignment="Center"/>
                    </Border>

                    <!-- Exit Button -->
                    <Button x:Name="ExitButton"
                            Content="ESCAPE THE POETRY"
                            FontSize="20"
                            Padding="20,10"
                            Margin="0,30,0,0"
                            HorizontalAlignment="Center"
                            Click="ExitButton_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
                                <Setter Property="Background" Value="#FFFF0000"/>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Guru Meditation -->
            <Border Background="#FFFF0000"
                    Height="40"
                    VerticalAlignment="Bottom">
                <TextBlock x:Name="GuruText"
                           Text="Guru Meditation #00000004.0000AAC0"
                           FontFamily="Consolas"
                           FontSize="20"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Page>
