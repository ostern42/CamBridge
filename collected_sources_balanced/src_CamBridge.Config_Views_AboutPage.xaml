<Page x:Class="CamBridge.Config.Views.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      PreviewKeyDown="Page_PreviewKeyDown"
      Focusable="True">

    <Grid Margin="24" Focusable="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="About CamBridge" FontSize="32" FontWeight="SemiBold" Margin="0,0,0,20"/>

        <!-- About Content with fixed ScrollViewer -->
        <Border Grid.Row="1" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="1"
                CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          Padding="20,20,30,20"
                          PanningMode="VerticalOnly">
                <ScrollViewer.Resources>
                    <Style TargetType="ScrollBar">
                        <Setter Property="Width" Value="18"/>
                    </Style>
                </ScrollViewer.Resources>

                <StackPanel>
                    <!-- Logo/Icon Area -->
                    <Border Height="120" Width="120" CornerRadius="60" 
                            Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                            HorizontalAlignment="Center" Margin="0,0,0,24">
                        <TextBlock Text="CB" FontSize="48" FontWeight="Bold" 
                                   Foreground="White" HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Version Info -->
                    <TextBlock Text="CamBridge" FontSize="28" FontWeight="SemiBold" 
                              HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Version 0.4.2 - The Answer to Life, DICOM, and Everything" 
                              FontSize="16" Opacity="0.7" HorizontalAlignment="Center" 
                              Margin="0,0,0,24"/>

                    <!-- Description -->
                    <Border CornerRadius="8" Padding="20"
                            Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                            BorderThickness="1" Margin="0,0,0,16">
                        <TextBlock TextWrapping="Wrap" LineHeight="24">
                            <Run Text="CamBridge is a JPEG to DICOM converter designed for medical imaging workflows with Ricoh G900 II cameras."/>
                            <LineBreak/><LineBreak/>
                            <Run Text="It extracts patient data from QRBridge-encoded QR codes embedded in EXIF metadata and creates fully compliant DICOM files for seamless PACS integration."/>
                        </TextBlock>
                    </Border>

                    <!-- Features -->
                    <TextBlock Text="Key Features" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    <Border CornerRadius="8" Padding="20"
                            Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                            BorderThickness="1" Margin="0,0,0,16">
                        <TextBlock LineHeight="24">
                            â€¢ Automatic JPEG to DICOM conversion<LineBreak/>
                            â€¢ QRBridge data extraction from EXIF<LineBreak/>
                            â€¢ Flexible JSON-based mapping configuration<LineBreak/>
                            â€¢ Windows Service with REST API<LineBreak/>
                            â€¢ Real-time monitoring dashboard<LineBreak/>
                            â€¢ Dead letter queue for failed conversions<LineBreak/>
                            â€¢ Email and Event Log notifications
                        </TextBlock>
                    </Border>

                    <!-- Copyright -->
                    <Border CornerRadius="8" Padding="20"
                            Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Â© 2025 Claude's Improbably Reliable Software Solutions" 
                                      FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Text="Licensed for use in medical imaging environments" 
                                      Opacity="0.7" Margin="0,0,0,8"/>
                            <TextBlock Opacity="0.5" FontStyle="Italic">
                                <Run Text="Built with love, caffeine, and a towel."/>
                                <LineBreak/>
                                <Run Text="Don't panic."/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Hidden Answer Instructions - VISIBLE -->
                    <Border Background="#1A1A1A" 
                            BorderBrush="#00FF00"
                            BorderThickness="2"
                            CornerRadius="8" 
                            Padding="20,15" 
                            HorizontalAlignment="Center"
                            Margin="0,40,0,30">
                        <TextBlock x:Name="KonamiHint" 
                                  FontFamily="Consolas"
                                  FontSize="18"
                                  Foreground="#00FF00"
                                  FontWeight="Bold"
                                  HorizontalAlignment="Center">
                            <Run Text="ðŸ”‘ Type "/>
                            <Run Text="42" FontSize="24" Foreground="#FFD700"/>
                            <Run Text=" for a surprise... ðŸ”‘"/>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation 
                                                        Storyboard.TargetProperty="Opacity"
                                                        From="0.4" To="1.0" 
                                                        Duration="0:0:1.5"
                                                        AutoReverse="True"
                                                        RepeatBehavior="Forever"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
